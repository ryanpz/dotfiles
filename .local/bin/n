#!/bin/sh
#
# Upserts a notes file in NOTES_DIR (default $HOME/Documents/notes) named the
# current date with the current timestamp, then opens it in EDITOR. If EDITOR
# is vi/vim/nvim, the cursor is set to the end of the file.

NOTES_DIR="${NOTES_DIR:-$HOME/Documents/notes}"

error() {
	printf 'error: %s\n' "$1" >&2
	exit 1
}

edit() {
	case "$EDITOR" in
	vi) set -- -c '$' "$@" ;;
	vim | nvim) set -- -c '$' -c 'startinsert' "$@" ;;
	*) ;;
	esac

	"$EDITOR" "$@"
}

[ ! -d "$NOTES_DIR" ] && error "NOTES_DIR ($NOTES_DIR) does not exist"

if ! command -v "$EDITOR" >/dev/null 2>&1; then
	error "EDITOR ($EDITOR) not found"
fi

d=$(date +'%Y%m%d')
file_name="$NOTES_DIR/$d.txt"

if [ ! -f "$file_name" ]; then
	printf 'Notes for %s\n' "$d" >"$file_name"
fi
printf '\n%s\n\n\n' "$(date +'%r')" >>"$file_name"

edit "$file_name"
